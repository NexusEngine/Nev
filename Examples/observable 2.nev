use {
  cli {*}
  observer {*}
}

Window :: Kind {
    mut size: Obs[Vector2]
    mut background: Obs[Color]

    render :: {
        write("a new frame rendered": Line)
    }

    me :: {
        add_observer([size, background], render)
    }
}

main :: {
    win := Window {
        size = (600, 400)
    }
    win.size = (800, 600)  // This will automatically call render
}

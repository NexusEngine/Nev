use cli {*}
use observer {*}

Window :: Kind {
    mut size: Obs[Vector2] {
        on_set << render 
    }
    mut background: Obs[Color] {
        on_set << {
          render()
          write("background changed")
        }
    }
    render :: {
        write("a new frame rendered": line)
    }
}

main :: {
    win := Window {
        size = (600, 4008)
    }
    win.size = (800, 600)  // This'll automatically call render
    win.background = "#ff5544" // This also
}
